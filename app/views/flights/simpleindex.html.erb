  <h2>SIMPLE INDEX</h2>

  <table class="table table-sm table-responsive table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Route</th>
        <th scope="col">Command</th>
        <th scope="col">Aircaft</th>
        <th scope="col">Total</th>
        <th scope="col">Night</th>
        <th scope="col">IFR</th>
        <th scope="col">Hood</th>
        <th scope="col">Sim</th>
        <th scope="col">IFR Appr.</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th colspan="4">TOTAL</th>
        <th> <%= @flights.sum(:night_time) + @flights.sum(:day_time) %></th>
        <th> <%= @flights.sum(:night_time) %> </th>
        <th> <%= @flights.sum(:actual_imc) %> </th>
        <th> <%= @flights.sum(:hood) %> </th>
        <th> <%= @flights.sum(:simulator_time) %> </th>
        <th> <%= @flights.sum(:ifr_appr) %></th>
      </tr>
      <% @flights.each do |flight| %>
      <tr>
        <td> <%= flight.date %></td>
        <td>
          <% if flight.simu? %>
            SIM
          <% else %>
            <%= flight.from.upcase %> to <%= flight.to.upcase %>
          <% end %>
        </td>
        <td> <%= flight.command_type.upcase %></td>
        <td> <%= flight.aircraft_type.upcase %> - <%= flight.aircraft_registration.upcase %></td>
        <td> <%= flight.day_time %></td>
        <td> <%= flight.night_time %></td>
        <td> <%= flight.actual_imc %> </td>
        <td> <%= flight.hood %> </td>
        <td> <%= flight.simulator_time %> </td>
        <td> <%= flight.ifr_appr %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
