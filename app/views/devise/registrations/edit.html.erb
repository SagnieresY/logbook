<div class="container">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="row">
        <%= f.input :email, required: true, autofocus: true, wrapper_html: { class: 'col-sm'} %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :current_password,
                    required: true,
                    hint: "Needed to validate any changes in yout account",
                    input_html: { autocomplete: "current-password" },
                    wrapper_html: { class: 'col-sm'} %>

        <div class="w-100"></div>

        <%= f.input :password,
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    label: 'New Password',
                    input_html: { autocomplete: "new-password" },
                    wrapper_html: { class: 'col-sm'} %>
        <%= f.input :password_confirmation,
                    required: false,
                    label: 'New Password Confirmation',
                    input_html: { autocomplete: "new-password" },
                    wrapper_html: { class: 'col-sm'} %>

        <div class="w-100"></div>


        <%= f.input :aviation_document, label: 'Aviation Doc. Number',
                    wrapper_html: { class: 'col-sm'} %>
        <%= f.input :aviation_document_date,
                    label: 'Aviation Doc. Exp. Date',
                    as: :string, input_html: { class: 'flatpickr-input' },
                    wrapper_html: { class: 'col-sm'} %>
                 <div class="w-100"></div>

        <%= f.input :pilot_license_type, collection: ["PPL", "CPL", "Other"],
                    wrapper_html: { class: 'col-sm'} %>
        <%= f.input :pilot_license_number,
                    wrapper_html: { class: 'col-sm'} %>

        <div class="w-100"></div>

        <%= f.input :medical_category, collection: [1,3],
                    wrapper_html: { class: 'col-sm'} %>
        <%= f.input :medical_date,
                    label: 'Last Medical Date',
                    as: :string, input_html: { class: 'flatpickr-input' },
                    wrapper_html: { class: 'col-sm'} %>

        <div class="w-100"></div>

        <%= f.input :instrument_rating_date,
                    label: 'IFR Certification Date',
                    as: :string,
                    input_html: { class: 'flatpickr-input' },
                    wrapper_html: { class: 'col-sm'} %>
        <%= f.input :instrument_rating_renewal_date,
                    label: 'IFR Renewal Date',
                    as: :string, input_html: { class: 'flatpickr-input' },
                    wrapper_html: { class: 'col-sm'} %>

        <div class="w-100"></div>

        <%= f.input :radio_certificate,
                    wrapper_html: { class: 'col-sm'} %>
        <%= f.input :night_rating_date,
                    label: 'Night Rating Date',
                    as: :string, input_html: { class: 'flatpickr-input' },
                    wrapper_html: { class: 'col-sm'} %>
        <%= f.input :biennial_flight_review,
                    label: 'Last Biennal Review',
                    as: :string, input_html: { class: 'flatpickr-input' },
                    wrapper_html: { class: 'col-sm'} %>

        <div class="w-100"></div>

        <%= f.input :FAA_PPL_license,
                    label: 'FAA PPL #',
                    wrapper_html: { class: 'col-sm'} %>
        <%= f.input :FAA_PPL_Conversion_date,
                    label: 'FAA PPL Date',
                    as: :string, input_html: { class: 'flatpickr-input' },
                    wrapper_html: { class: 'col-sm'} %>
        <div class="w-100"></div>

        <%= f.input :FAA_CPL_license,
                    label: 'FAA CPL #',
                    wrapper_html: { class: 'col-sm'} %>
        <%= f.input :FAA_CPL_conversion_date,
                    label: 'FAA CPL Date',
                    as: :string, input_html: { class: 'flatpickr-input' },
                    wrapper_html: { class: 'col-sm'} %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: "btn btn-primary" %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>
